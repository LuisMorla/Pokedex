                        <select asp-for="RegionId" class="form-select">
                        <option value="">Seleccione una opcion</option>
                        <option value="1">Kanto</option>
                        </select>
                        </div>

                        <div class="mb-3">
                        <label asp-for="TypeId" class="form-label">Tipo: </label>
                        <select asp-for="TypeId" class="form-select">
