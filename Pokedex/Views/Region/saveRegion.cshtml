@using Pokedex.Core.Application.ViewModel
@model saveRegionViewModel

@{
    bool EditMode = Model.Id == 0 ? false : true;
    ViewData["Title"] = "Guardar pokemon";

}

<div class="container-fluid">
    <div class="row">
        <div class="col-6 offset-3">
            <div class="card">
                <div class="card-header bg-dark text-white">
                    <h4>@(EditMode ? $"Editando la región: {Model.Name}" : "Agregando una nueva Región")</h4>
                </div>

                <div class="card-body">
                    <form method="post" asp-controller="Region" asp-action="@(EditMode ? "EditRegion" : "saveRegion")">

                        <div class="mb-3">
                            <label asp-for="Name" class="form-label">Region: </label>
                            <input type="text" asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">Descripción: </label>
                            <textarea asp-for="Description" class="form-control"></textarea>
                        </div>
