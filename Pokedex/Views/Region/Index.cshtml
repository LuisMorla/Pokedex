@using Pokedex.Core.Application.ViewModel
@model List<RegionViewModel>

<div class="container-fluid">

    <div class="col-3 offset-12 mb-5">
        <a asp-controller="Region" asp-action="SaveRegion" class="btn btn btn-outline-dark">Agregar Nueva Region</a>
    </div>

    <div class="row">
        @if (Model == null || Model.Count == 0)
        {
            <h2>No Hay Regiones Registrados</h2>

        }
        else
        {
            @foreach (RegionViewModel item in Model)
            {

                <div class="col-12 mb-lg-5">
                    <div class="card">
                        <div class="card card-header bg-dark text-white">
                            <h2>Region: @item.Name</h2>
                        </div>
                        <div class="card card-body">
                            <h2>@item.Name</h2>
                            <p class="card-text">@item.Description</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a class="btn btn-sm btn-outline-info" asp-controller="Region" asp-action="EditRegion" asp-route-id="@item.Id">Editar</a>
                                    <a class="btn btn-sm btn-outline-danger" asp-controller="Region" asp-action="Delete" asp-route-id="@item.Id">Eliminar</a>
                                </div>
                                <small class="text-muted">Cantidad de Pokemones en @item.Name: <strong class="text-black">@item.PokemonQuantity</strong></small>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }


    </div>
</div>
